<home>
  <div class="home">
    <!-- Hero Section - Clean Modern Layout -->
    <hero-section if={state.latestEpisodes[0]} link={state.latestEpisodes[0]} />

    <!-- About Section - Clean & Minimal -->
    <section class="about-section-minimal">
      <div class="about-content">
        <h2 class="about-title-minimal">{t("pages.home.story.title")}</h2>
        <p class="about-text">{t("pages.home.story.description1")}</p>
        <p class="about-text">{t("pages.home.story.description2")}</p>

        <div class="platform-links">
          <a
            each={platform in state.homePlatforms}
            key={platform.name}
            href={platform.url}
            target="_blank"
            class="platform-link"
          >
            <sl-icon name={platform.icon}></sl-icon>
            <span>{platform.name}</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Latest Episodes Section -->
    <section class="episodes-section">
      <div class="section-content">
        <div class="section-header-casual">
          <h2 class="section-title">
            <span class="title-doodle">ðŸŽ§</span>
            {t("pages.home.episodes.latest.title")}
          </h2>
          <div class="title-underline"></div>
        </div>

        <program-card program-episodes={state.latestEpisodes} show-more={true} />
      </div>
    </section>



    <!-- Programs - Artistic Grid -->
    <section class="episodes-section programs-artistic">
      <div class="section-content">
          <div class="section-header-casual">
          <h2 class="section-title">
            <span class="title-doodle">ðŸŽ§</span>
            {t("pages.home.episodes.other.title")}
          </h2>
          <div class="title-underline"></div>
        </div>

        <div class="programs-masonry">
          <div class="program-card-unified" each={program in state.otherPrograms} key={program.id}>
            <!-- Program Artwork -->
            <div class="program-artwork">
              <img src={program.artworkUrl} alt={program.title} class="artwork-image" />
              <div class="artwork-overlay">
                <span class="category-badge">{program.category}</span>
                <span class="episode-count">{program.episodes}{t("pages.home.program.episodesCount")}</span>
              </div>
            </div>

            <!-- Program Content -->
            <div class="program-content">
              <h3 class="program-title">{program.title}</h3>
              <p class="program-description">{program.description}</p>

              <div class="program-meta">
                <div class="meta-item">
                  <sl-icon name="calendar"></sl-icon>
                  <span>{program.schedule}</span>
                </div>
                <div class="program-actions">
                  <sl-dropdown>
                    <sl-button slot="trigger" variant="default" size="small" class="listen-btn">
                      <sl-icon name="play"></sl-icon>
                      {t("pages.home.program.listen")}
                      <sl-icon name="chevron-down" slot="suffix"></sl-icon>
                    </sl-button>
                    <sl-menu>
                      <sl-menu-item if={program.listen.apple}>
                        <sl-icon name="apple" slot="prefix"></sl-icon>
                        <a href={program.listen.apple} target="_blank">Apple Podcasts</a>
                      </sl-menu-item>
                      <sl-menu-item if={program.listen.spotify}>
                        <sl-icon name="spotify" slot="prefix"></sl-icon>
                        <a href={program.listen.spotify} target="_blank">Spotify</a>
                      </sl-menu-item>
                      <sl-menu-item if={program.listen.amazon}>
                        <sl-icon name="amazon" slot="prefix"></sl-icon>
                        <a href={program.listen.amazon} target="_blank">Amazon Music</a>
                      </sl-menu-item>
                      <sl-menu-item if={program.listen.youtube}>
                        <sl-icon name="youtube" slot="prefix"></sl-icon>
                        <a href={program.listen.youtube} target="_blank">YouTube Music</a>
                      </sl-menu-item>
                      <sl-menu-item if={program.listen.rss}>
                        <sl-icon name="rss" slot="prefix"></sl-icon>
                        <a href={program.listen.rss} target="_blank">RSS Feed</a>
                      </sl-menu-item>
                    </sl-menu>
                  </sl-dropdown>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script>
    import { fetchRSSFeed, getLatestEpisodes } from '@/utils/rss';
    import { HOME_PLATFORMS, OTHER_PROGRAMS } from '@/constants/links';
    import i18nStore from '@/stores/i18n-store';

    export default {
      t: i18nStore.t.bind(i18nStore),
      async onBeforeMount() {
        try {
          const RSS_URL = import.meta.env.VITE_RSS_URL;
          const episodes = await fetchRSSFeed(RSS_URL);
          this.update({
            latestEpisodes: getLatestEpisodes(episodes, 3)
          });
        } catch (error) {
          console.error('Failed to load RSS feed:', error);
        }
      },
      state: {
        latestEpisodes: [],
        homePlatforms: HOME_PLATFORMS,
        otherPrograms: OTHER_PROGRAMS
      },
    }
  </script>

