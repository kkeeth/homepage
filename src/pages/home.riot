<home>
  <div class="home">
    <!-- Hero Section - Clean Modern Layout -->
    <hero-section if={state.latestEpisodes[0]} link={state.latestEpisodes[0]} />

    <!-- About Section - Clean & Minimal -->
    <section class="about-section-minimal">
      <div class="about-content">
        <div class="section-header-casual">
          <h2 class="section-title">{t("pages.home.story.title")}</h2>
          <div class="title-underline"></div>
        </div>
        <p class="about-text">{t("pages.home.story.description1")}</p>
        <p class="about-text">{t("pages.home.story.description2")}</p>

        <div class="platform-links">
          <a
            each={platform in state.homePlatforms}
            key={platform.name}
            href={platform.url}
            target="_blank"
            class="platform-link platform-{platform.icon}"
          >
            <sl-icon name={platform.icon}></sl-icon>
            <span>{platform.name}</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Latest Episodes Section -->
    <section class="episodes-section">
      <div class="section-content">
        <div class="section-header-casual">
          <h2 class="section-title">
            <span class="title-doodle">ðŸŽ§</span>
            {t("pages.home.episodes.latest.title")}
          </h2>
          <div class="title-underline"></div>
        </div>

        <episode-card program-episodes={state.latestEpisodes} show-more={true} />
      </div>
    </section>



    <!-- Other Episodes - Compact List -->
    <section class="other-programs-section">
      <div class="section-content">
        <h2 class="other-programs-title">{t("pages.home.episodes.other.title")}</h2>

        <div class="other-programs-list">
          <a
            each={program in state.otherPrograms}
            key={program.id}
            href={program.listen.spotify || program.listen.apple || '#'}
            target="_blank"
            class="other-programs-item"
          >
            <img src={program.artworkUrl} alt={program.title} class="other-programs-artwork" />
            <div class="other-programs-info">
              <h3 class="other-programs-name">{program.title}</h3>
              <span class="other-programs-meta">{t("pages.home.categories." + program.category)} Â· {program.episodes}{t("pages.home.program.episodesCount")}</span>
            </div>
            <sl-icon name="chevron-right" class="other-programs-arrow"></sl-icon>
          </a>
        </div>
      </div>
    </section>
  </div>

  <script>
    import { fetchRSSFeed, getLatestEpisodes } from '@/utils/rss';
    import { HOME_PLATFORMS, OTHER_PROGRAMS } from '@/constants/links';
    import i18nStore from '@/stores/i18n-store';

    export default {
      t: i18nStore.t.bind(i18nStore),
      async onBeforeMount() {
        try {
          const RSS_URL = import.meta.env.VITE_RSS_URL;
          const episodes = await fetchRSSFeed(RSS_URL);
          this.update({
            latestEpisodes: getLatestEpisodes(episodes, 3)
          });
        } catch (error) {
          console.error('Failed to load RSS feed:', error);
        }
      },
      state: {
        latestEpisodes: [],
        homePlatforms: HOME_PLATFORMS,
        otherPrograms: OTHER_PROGRAMS
      },
    }
  </script>

